// prisma/schema.prisma (Versión Final para la Web)
datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Administrador {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  password     String
  otp          String?
  otpExpires   DateTime?
  token        String?
  confirmEmail Boolean   @default(false)
  createdAt    DateTime  @default(now())
}

model Cliente {
  id           Int       @id @default(autoincrement())
  nombre       String
  email        String    @unique
  password     String
  telefono     String?
  otp          String?
  otpExpires   DateTime?
  token        String?
  confirmEmail Boolean   @default(false)
  createdAt    DateTime  @default(now())
  tickets      Ticket[]
  sqlServerId  Int?
}

model Ticket {
  id               Int       @id @default(autoincrement())
  descripcion      String
  // --- Campos para simular el flujo completo ---
  estado           String    @default("Ingresado") // Estado visible para el cliente
  diagnostico      String?   // Notas del "técnico" (admin)
  proformaDetalles String?   // Detalles de partes/servicios
  precioTotal      Decimal?  @db.Decimal(10, 2) // Precio de la proforma
  proformaEstado   String?   @default("Pendiente") // Pendiente, Aprobado, Rechazado

  clienteId        Int
  cliente          Cliente   @relation(fields: [clienteId], references: [id])
  createdAt        DateTime  @default(now())
}

model Documento {
  id        Int      @id @default(autoincrement())
  nombre    String
  url       String
  createdAt DateTime @default(now())
}