datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Administrador {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  telefono  String?
  createdAt DateTime @default(now())
  tickets   Ticket[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  descripcion String
  estado      String   @default("abierto")
  clienteId   Int
  cliente     Cliente  @relation(fields: [clienteId], references: [id])
  createdAt   DateTime @default(now())
}

model Documento {
  id        Int      @id @default(autoincrement())
  nombre    String
  url       String
  createdAt DateTime @default(now())
}
